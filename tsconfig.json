{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "lib": ["dom", "es2017", "es7", "es6"],
        "declaration": true,
        "sourceMap": true,
        "allowJs": false,
        // "noEmit": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "dist",
        "coverage",
        "jest.config.js",
        "test",
        "node_modules",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
